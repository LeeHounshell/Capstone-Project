<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!-- enable overlap of transitions -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!-- enable overlap of transitions -->
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <!-- material design colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/accent</item>
        <!-- window settings -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert</item>
    </style>

    <style name="SettingsFragmentStyle">
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="AppTheme.Splash" parent ="AppTheme">
        <item name="android:windowBackground">@drawable/radio_theater_spash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppBarLayout" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="FloatingActionButton" parent="AppTheme">
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="android:stateListAnimator">@animator/fab_state_list_anim</item>
    </style>

    <!--
        scrollbar styling from: http://stackoverflow.com/questions/30314150/android-custom-scrollbar-and-fastscrollenabled
    -->
    <style name="EpisodeListViewStyle" parent="AppTheme">
        <item name="android:scrollbarSize">42dp</item>
        <item name="android:fastScrollTrackDrawable">@drawable/radio_theater_fast_scrollbar_track</item>
        <item name="android:fastScrollThumbDrawable">@drawable/radio_theater_fast_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/radio_theater_scrollbar_track</item>
        <item name="android:scrollbarThumbVertical">@drawable/radio_theater_scrollbar</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">0px</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/dark_red</item>
    </style>

    <style name="RatingBarDetail" parent="AppTheme">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/transparent</item>
    </style>

    <style name="RadioTheaterButton" parent="AppTheme">
        <item name="colorControlHighlight">@color/buttonColorPressed</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
    </style>

    <style name="AdMob" parent="AppTheme">
        <item name="android:elevation">@dimen/admob_elevation</item>
    </style>

    <style name="circleview_style">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/image_elevation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AboutImage" parent="AppTheme" />

    <style name="FontStyle_Small">
        <item name="font_small">10sp</item>
        <item name="font_medium">14sp</item>
        <item name="font_large">20sp</item>
        <item name="font_xlarge">27sp</item>
    </style>

    <style name="FontStyle_Medium">
        <item name="font_small">14sp</item>
        <item name="font_medium">18sp</item>
        <item name="font_large">24sp</item>
        <item name="font_xlarge">31sp</item>
    </style>

    <style name="FontStyle_Large">
        <item name="font_small">22sp</item>
        <item name="font_medium">26sp</item>
        <item name="font_large">32sp</item>
        <item name="font_xlarge">39sp</item>
    </style>


    <style name="CarTheme" parent="AppTheme">
        <!-- colorPrimaryDark is currently used in Android Auto for:
             - App background
             - Drawer right side ("more" custom actions) background
             - Notification icon badge tinting
             - Overview â€œnow playingâ€ icon tinting
         -->
        <item name="colorPrimaryDark">#ffbf360c</item>

        <!-- colorAccent is used in Android Auto for:
             - Spinner
             - progress bar
             - floating action button background (Play/Pause in media apps)
         -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="WearTheme" parent="AppTheme">
        <!-- colorPrimaryDark is currently used on Android Wear for:
             - Card background on media browse
             - Card background on 4-way media controls
         -->
        <item name="colorPrimaryDark">#ffbf360c</item>
    </style>

</resources>
